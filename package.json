{
  "name": "forensic-handler",
  "version": "0.0.0-development",
  "description": "a module that sits independently between the controller and the model, performing request data validation, serialization and integrity checks",
  "main": "index.js",
  "scripts": {
    "test": "BABEL_ENV=test jest --config ./jest.config.json --runInBand --forceExit",
    "watch-test": "npm run test -- --watchAll",
    "commit": "git-cz",
    "prebuild": "rimraf dist && rimraf lib",
    "build": "BABEL_ENV=build rollup --config",
    "validate-doc": "documentation lint src/**",
    "generate-doc": "rimraf docs && documentation build src/** -f html -o docs",
    "semantic-release": "semantic-release",
    "report-coverage": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "author": "Harrison Ifeanyichukwu <harrisonifeanyichukwu@gmail.com> (https://github.com/harrison-ifeanyichukwu)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "commitizen": "3.0.4",
    "coveralls": "3.0.2",
    "cz-conventional-changelog": "2.1.0",
    "documentation": "9.0.0-alpha.0",
    "jest": "23.6.0",
    "jsdoc": "3.5.5",
    "mongoose": "5.3.10",
    "regenerator-runtime": "0.12.1",
    "rimraf": "2.6.2",
    "rollup": "0.66.6",
    "rollup-all": "1.3.1",
    "rollup-plugin-babel": "4.0.3",
    "rollup-plugin-node-resolve": "3.4.0",
    "semantic-release": "^15.13.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harrison-ifeanyichukwu/forensic-handler.git"
  }
}
